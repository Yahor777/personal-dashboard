# ========================================
# OLX Scraper + Llama 4 Configuration
# ========================================

# === OLX Settings ===
# Comma-separated search queries
SEARCH_QUERIES=rtx 3060,iphone 13,gaming laptop

# Maximum ads to scrape per query
MAX_ADS=10

# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=10

# === Playwright Settings ===
# Run browser in headless mode (true/false)
PLAYWRIGHT_HEADLESS=true

# Browser type (chromium/firefox/webkit)
BROWSER_TYPE=chromium

# Download images locally (true/false)
DOWNLOAD_IMAGES=true

# Directory for downloaded images
IMAGES_DIR=./data/images

# Take screenshots on errors (true/false)
SCREENSHOT_ON_ERROR=true

# === Llama 4 Web UI Settings ===
# URL to Llama 4 Maverick web interface
LLAMA_WEB_URL=https://your-llama4-instance.com/chat

# Timeout for Llama response (seconds)
LLAMA_TIMEOUT=60

# Max retries for invalid JSON
LLAMA_MAX_RETRIES=2

# === Webhook Settings ===
# Your webhook endpoint to receive results
WEBHOOK_URL=https://your-site.com/api/listings

# Webhook timeout (seconds)
WEBHOOK_TIMEOUT=30

# Webhook retry attempts
WEBHOOK_MAX_RETRIES=3

# === Proxy Settings (Optional) ===
# HTTP/HTTPS proxy
# PROXY=http://username:password@proxy.com:8080

# Rotate proxies (comma-separated)
# PROXY_LIST=http://proxy1.com:8080,http://proxy2.com:8080

# === User Agent Settings ===
# Path to user agents list file
USER_AGENT_LIST_PATH=./user_agents.txt

# Rotate user agents (true/false)
ROTATE_USER_AGENTS=true

# === Logging Settings ===
# Log level (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=./data/logs/scraper.log

# Console logging (true/false)
LOG_TO_CONSOLE=true

# === Advanced Settings ===
# Min delay between requests (seconds)
MIN_DELAY=0.8

# Max delay between requests (seconds)
MAX_DELAY=2.5

# Page load timeout (seconds)
PAGE_TIMEOUT=30

# Respect robots.txt (true/false)
RESPECT_ROBOTS=true

# robots.txt URL
ROBOTS_URL=https://www.olx.pl/robots.txt

# === CAPTCHA Handling ===
# Directory for CAPTCHA screenshots
CAPTCHA_SCREENSHOT_DIR=./data/captcha_screenshots

# Manual review queue file
MANUAL_REVIEW_FILE=./manual_review.json

# === Security ===
# DO NOT commit this file with real credentials!
# Add .env to .gitignore
